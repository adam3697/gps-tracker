<!DOCTYPE html>
<html lang="it">
<head>
  <meta charset="UTF-8">
  <title>Posizione GPS</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    body {
      font-family: sans-serif;
      padding: 20px;
      text-align: center;
      background-color: #f2f2f2;
    }
    h1 {
      color: #333;
    }
    button {
      padding: 15px 25px;
      font-size: 18px;
      background-color: #0084ff;
      color: white;
      border: none;
      border-radius: 5px;
    }
    #output {
      margin-top: 20px;
      font-size: 16px;
      color: #222;
    }
  </style>
</head>
<body>
  <h1>Condividi la tua posizione</h1>
  <p>Tocca il pulsante qui sotto per mostrare la tua posizione GPS.</p>
  <button onclick="getLocation()">üìç Trova la mia posizione</button>
  <div id="output"></div>

  <script>
    function getLocation() {
      if (navigator.geolocation) {
        navigator.geolocation.getCurrentPosition(showPosition, showError);
      } else {
        document.getElementById("output").innerText = "Il tuo dispositivo non supporta la geolocalizzazione.";
      }
    }

    function showPosition(position) {
      const lat = position.coords.latitude;
      const lon = position.coords.longitude;
      document.getElementById("output").innerHTML = `
        ‚úÖ <strong>Posizione trovata!</strong><br><br>
        üåç Latitudine: <b>${lat}</b><br>
        üåç Longitudine: <b>${lon}</b>
      `;
    }

    function showError(error) {
      switch(error.code) {
        case error.PERMISSION_DENIED:
          msg = "Permesso negato. Non posso rilevare la posizione.";
          break;
        case error.POSITION_UNAVAILABLE:
          msg = "Posizione non disponibile.";
          break;
        case error.TIMEOUT:
          msg = "Timeout. Riprovare.";
          break;
        default:
          msg = "Errore sconosciuto.";
      }
      document.getElementById("output").innerText = "‚ùå " + msg;
    }
  </script>
</body>
</html>

